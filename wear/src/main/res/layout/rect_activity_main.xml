<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".MainActivity" tools:deviceIds="wear_square">

    <ImageView
        android:id="@+id/rect_activity_play"
        android:src="@drawable/ic_play_arrow_white_48dp"
        android:layout_centerInParent="true"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <ImageView
        android:id="@+id/rect_activity_forward"
        android:src="@drawable/ic_fast_forward_white_48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:layout_height="45dp" />
    <ImageView
        android:id="@+id/rect_activity_back"
        android:src="@drawable/ic_fast_rewind_white_48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="45dp"
        android:layout_height="45dp" />

</RelativeLayout>
