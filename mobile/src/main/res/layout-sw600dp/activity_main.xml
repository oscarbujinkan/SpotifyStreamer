<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/fragment_artist"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical"
        class ="com.udacity.nanodegree.spotifystreamer.fragments.ArtistFragment"
        tools:context="com.udacity.nanodegree.spotifystreamer.fragments.ArtistFragment"
        tools:layout="@layout/artist_fragment">
    </fragment>
<FrameLayout
    android:id="@+id/main_fragment_content"
    android:layout_width="0dp"
    android:layout_weight="4"
    android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
